<?xml version="1.0" encoding="utf-8"?>
<blobStores>
    <blobStore>
        <id>myBlobStore</id>
        <type>s3BlobStore</type>
        <pattern>/static-assets/remote.*</pattern>
        <configuration>
            <credentials>
                <accessKey>myAccessKey</accessKey>
                <secretKey>mySecretKey</secretKey>
            </credentials>
            <region>myRegion</region>
            <pathStyleAccess>true</pathStyleAccess>
        </configuration>
        <mappings>
            <mapping>
                <publishingTarget>preview</publishingTarget>
                <storeTarget>my-mapping</storeTarget>
                <prefix>sandbox</prefix>
            </mapping>
            <mapping>
                <publishingTarget>staging</publishingTarget>
                <storeTarget>my-mapping</storeTarget>
                <prefix>stage</prefix>
            </mapping>
            <mapping>
                <publishingTarget>live</publishingTarget>
                <storeTarget>my-mapping-live</storeTarget>
            </mapping>
        </mappings>
    </blobStore>
    <blobStore>
        <id>anotherBlobStore</id>
        <pattern>/static-assets/another.*</pattern>
        <type>anotherBlobStore</type>
        <configuration>
        </configuration>
    </blobStore>
</blobStores>